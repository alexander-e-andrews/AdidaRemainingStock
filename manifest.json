{
    "manifest_version": 2,
    "name": "Adidas Product Availability",
    "version": "1.0",
    "description": "Display the remaining stock left on adidas.com items.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": ["*://www.adidas.com/*", "tabs", "webNavigation"],
    "content_scripts": [
        {
            "matches": [
                "*://www.adidas.com/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_start"
        }
    ]
}